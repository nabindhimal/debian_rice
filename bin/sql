case $1 in
start)
	docker start f0afab33b86a
	docker exec -it f0afab33b86a /bin/bash
	;;
stop)
	docker stop f0afab33b86a
	;;
reconnect)
	docker exec -it f0afab33b86a /bin/bash
	;;
*)
	echo "Usage: $0 <start/stop>" | cowsay | lolcat
	exit 1
esac
	
